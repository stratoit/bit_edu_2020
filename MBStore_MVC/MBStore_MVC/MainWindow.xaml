<Window x:Class="MBStore_MVC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Points="clr-namespace:LiveCharts.Wpf.Points;assembly=LiveCharts.Wpf"        
        xmlns:local="clr-namespace:MBStore_MVC" 
        
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"     
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"     
        
        TextElement.FontWeight="Medium"
        TextElement.FontSize="13"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
       
         
        
        Background="{DynamicResource MaterialDesignPaper}"
        mc:Ignorable="d" 
        Title="모바일기기 매장관리 시스템 v0.2" Height="768" Width="1024" Closed="Window_Closed">

    <Window.Resources>
        <!-- Color Resource-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.Green.Named.Primary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="myHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
            </Style>

            <Style TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>

        </ResourceDictionary>
    </Window.Resources>




    <materialDesign:DialogHost Identifier="RootDialog" SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="15*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>


            <Grid x:Name="gd_top" Background="{DynamicResource PrimaryHueMidBrush}" Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="95"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Foreground="{DynamicResource PrimaryHueMidForegroundBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontStyle="Italic" FontSize="38" FontWeight="Bold" Margin="0 0 60 0"  Text="PRO"  />
                <TextBlock Foreground="{DynamicResource SecondaryAccentForegroundBrush}" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontStyle="Italic" FontSize="38" FontWeight="Bold" Margin="80 0 0 0" Text="TEC"  />
                <TextBlock  Foreground="{DynamicResource SecondaryAccentForegroundBrush}" Grid.Column="1" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"  Margin="134,0,178,0" >모바일기기 매장관리 시스템</TextBlock>
                <TextBlock Foreground="{DynamicResource SecondaryAccentForegroundBrush}" TextWrapping="Wrap" HorizontalAlignment="Center" Grid.Column="2" x:Name="text" FontSize="15">Time</TextBlock>



            </Grid>

            <Grid Grid.Row="1" Grid.RowSpan="2" Background="{DynamicResource PrimaryHueMidBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="101*"/>
                    <ColumnDefinition Width="915*"/>
                </Grid.ColumnDefinitions>

                <TabControl  TabStripPlacement="Left" BorderBrush="{x:Null}" Grid.ColumnSpan="2" >
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid Name="Panel">
                                            <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Panel" Property="Background" Value="{DynamicResource SecondaryAccentBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Panel" Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Height="100" Width="68" BorderBrush="{x:Null}" >
                        <TabItem.Header>
                            <StackPanel Orientation="Vertical">
                                <materialDesign:PackIcon Foreground="{DynamicResource SecondaryAccentForegroundBrush}" HorizontalAlignment="Center" Kind="Home" Width="28" Height="26" />
                                <TextBlock Foreground="{DynamicResource SecondaryAccentForegroundBrush}" HorizontalAlignment="Center">홈</TextBlock>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid Background="{DynamicResource MaterialDesignPaper}" Margin="-2" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"></RowDefinition>
                                <RowDefinition Height="1.3*"></RowDefinition>
                                <RowDefinition Height="0.1*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <!--TextBlock Grid.Row="0" FontSize="20" FontWeight="Bold" x:Name="tb_main" VerticalAlignment="Center" HorizontalAlignment="Center">Hello</-->
                            <Grid Grid.Row="0" Grid.RowSpan="2" Margin="10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.26*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="1.2*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                            <!-- materialDesign:Transitioner-->
                                <Grid Grid.Column="1" Grid.ColumnSpan="3">
                                    <materialDesign:Transitioner SelectedIndex="0" AutoApplyTransitionOrigins="True">
                                        <Grid>
                                            <local:UI_Notice/>
                                        </Grid>
                                        <materialDesign:TransitionerSlide>
                                            <materialDesign:TransitionerSlide.BackwardWipe>
                                                <materialDesign:CircleWipe/>
                                            </materialDesign:TransitionerSlide.BackwardWipe>
                                            <materialDesign:TransitionerSlide.ForwardWipe>
                                                <materialDesign:SlideWipe Direction="Right"/>
                                            </materialDesign:TransitionerSlide.ForwardWipe>
                                            <local:UI_FullText/>
                                        </materialDesign:TransitionerSlide>
                                    </materialDesign:Transitioner>
                                </Grid>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1.7*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    
                                    <materialDesign:Flipper HorizontalAlignment="Center" VerticalAlignment="Center" Height="405" Width="265"  Style="{StaticResource MaterialDesignCardFlipper}" >
                                    <materialDesign:Flipper.FrontContent >
                                        <Grid  Background="{DynamicResource PrimaryHueMidBrush}" >
                                            <Grid.RowDefinitions >
                                                <RowDefinition Height="290" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <materialDesign:ColorZone   Margin="10" Mode="Custom"  VerticalAlignment="Stretch" Background="Gray">
                                                <materialDesign:PackIcon Kind="AccountCircle" Foreground="White" Height="128" Width="128"  VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </materialDesign:ColorZone>
                                            <Border Margin="10" VerticalAlignment="Stretch" >
                                                <Border.Background>
                                                    <ImageBrush  Stretch="Fill" x:Name="img_main_emp"  AlignmentY="Center" AlignmentX="Center"/>
                                                </Border.Background>
                                            </Border>
                                            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                                                <TextBlock FontWeight="Bold" FontSize="16" Foreground="{DynamicResource SecondaryAccentForegroundBrush}" x:Name="text_myinfo_name"/>

                                                <Button 
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                    Margin="0 4 0 0"
                                                    Foreground="{DynamicResource PrimaryHueMidForegroundBrush}">
                                                    EDIT
                                                </Button>
                                                <Button   
                                                    Click="Button_Click" 
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                    Margin="0 4 0 0"
                                                    Foreground="{DynamicResource PrimaryHueMidForegroundBrush}">
                                                    LOGOUT
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </materialDesign:Flipper.FrontContent>
                                    <materialDesign:Flipper.BackContent>
                                        <Grid Background="{DynamicResource MaterialDesignPaper}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="auto" />
                                                <RowDefinition
                                                    Height="*" />
                                            </Grid.RowDefinitions>
                                            <materialDesign:ColorZone
                                                Background="{DynamicResource PrimaryHueMidBrush}"
                                                Mode="Accent"
                                                Padding="4">
                                                <StackPanel
                                                    Orientation="Horizontal">
                                                    <Button
                                                        Style="{StaticResource MaterialDesignToolForegroundButton}"
                                                        Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                        HorizontalAlignment="Left">
                                                        <materialDesign:PackIcon
                                                            Kind="ArrowLeft"
                                                            HorizontalAlignment="Right" />
                                                    </Button>
                                                    <TextBlock
                                                        Margin="8 0 0 0"
                                                        VerticalAlignment="Center">
                                                        EDIT USER
                                                    </TextBlock>
                                                </StackPanel>
                                            </materialDesign:ColorZone>
                                            <Grid
                                                Grid.Row="1"
                                                Margin="0 6 0 0"
                                                HorizontalAlignment="Center"
                                                        VerticalAlignment="Top"
                                                        Width="172">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBox
                                                    Foreground="{DynamicResource MaterialDesignBody}"
                                                    x:Name="tb_myinfo_phone"
                                                    materialDesign:HintAssist.Hint="휴대전화 번호"
                                                    materialDesign:HintAssist.IsFloating="True"
                                                    Margin="0 0 0 0">

                                                </TextBox>
                                                <TextBox
                                                    Foreground="{DynamicResource MaterialDesignBody}"
                                                       x:Name="tb_myinfo_email"
                                                    Grid.Row="1"
                                                    materialDesign:HintAssist.Hint="이메일"
                                                              materialDesign:HintAssist.IsFloating="True"
                                                              Margin="0 6 0 0">
                                                </TextBox>
                                                <TextBox
                                                    Foreground="{DynamicResource MaterialDesignBody}"
                                                       x:Name="tb_myinfo_address"
                                                    Grid.Row="2"
                                                    materialDesign:HintAssist.Hint="주소"
                                                              materialDesign:HintAssist.IsFloating="True"
                                                              Margin="0 6 0 0">
                                                </TextBox>
                                                <TextBox
                                                    Foreground="{DynamicResource MaterialDesignBody}"
                                                       x:Name="tb_myinfo_newPw"
                                                    Grid.Row="3"
                                                    materialDesign:HintAssist.Hint="변경할 비밀번호"
                                                              materialDesign:HintAssist.IsFloating="True"
                                                              Margin="0 6 0 0">
                                                </TextBox>
                                                <TextBox
                                                    Foreground="{DynamicResource MaterialDesignBody}"
                                                       x:Name="tb_myinfo_NewPw_Check"
                                                    Grid.Row="4"
                                                    materialDesign:HintAssist.Hint="변경할 비밀번호 확인"
                                                              materialDesign:HintAssist.IsFloating="True"
                                                              Margin="0 6 0 0">
                                                </TextBox>
                                                <TextBox
                                                    Foreground="{DynamicResource MaterialDesignBody}"
                                                       x:Name="tb_myinfo_usePw"
                                                    Grid.Row="5"
                                                    materialDesign:HintAssist.Hint="기존 비밀번호"
                                                              materialDesign:HintAssist.IsFloating="True"
                                                              Margin="0 6 0 0">
                                                </TextBox>
                                                <Button
                                                    x:Name="btn_myinfo_update"
                                                    Grid.Row="6"
                                                    Margin="0 12 0 0"
                                                    Content="변경하기"
                                                    HorizontalAlignment="Center"
                                                    Click="btn_myinfo_update_Click"
                                                    >
                                                </Button>

                                            </Grid>
                                        </Grid>
                                    </materialDesign:Flipper.BackContent>
                                </materialDesign:Flipper>

                                <materialDesign:DialogHost
                                    DialogClosing="Schedule_DialogHost_OnDialogClosing"
                                    Grid.Row="1"
                                    VerticalAlignment="Bottom">
                                    <materialDesign:DialogHost.DialogContent>
                                        <StackPanel
                                            Margin="16">
                                            <TextBlock>
                                                새로운 메모 추가
                                            </TextBlock>
                                            <TextBox
                                                Margin="0 8 0 0"
                                                HorizontalAlignment="Stretch"
                                                x:Name="ScheduleTextBox" />
                                            <StackPanel
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right">
                                                <Button
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    IsDefault="True"
                                                    Margin="0 8 8 0"
                                                    Command="materialDesign:DialogHost.CloseDialogCommand">
                                                    <Button.CommandParameter>
                                                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                            True
                                                        </system:Boolean>
                                                    </Button.CommandParameter>
                                                    추가
                                                </Button>
                                                <Button
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    IsCancel="True"
                                                    Margin="0 8 8 0"
                                                    Command="materialDesign:DialogHost.CloseDialogCommand">
                                                    <Button.CommandParameter>
                                                        <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                                            False
                                                        </system:Boolean>
                                                    </Button.CommandParameter>
                                                    삭제
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </materialDesign:DialogHost.DialogContent>
                                    <Border
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                                        MinWidth="256"
                                        MinHeight="220"
                                        ClipToBounds="True">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="*" />
                                                <RowDefinition
                                                    Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <ListBox
                                                x:Name="ScheduleListBox">
                                            </ListBox>
                                            <materialDesign:ColorZone
                                                Mode="PrimaryMid"
                                                Grid.Row="1"
                                                Effect="{DynamicResource MaterialDesignShadowDepth5}">
                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Margin="16">
                                                    오늘의 메모 추가
                                                </TextBlock>
                                            </materialDesign:ColorZone>
                                            <Button
                                                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                                Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Right"
                                                Grid.Row="0"
                                                Margin="0 0 28 -20">
                                                <materialDesign:PackIcon
                                                    Kind="Plus"
                                                    Height="22"
                                                    Width="22" />
                                            </Button>
                                        </Grid>
                                    </Border>
                                </materialDesign:DialogHost>
                                </Grid>
                                
                                
                                
                            </Grid>
                        </Grid>
                    </TabItem>

                    <TabItem Height="100" Background="{DynamicResource PrimaryHueMidBrush}" BorderBrush="{x:Null}" VerticalAlignment="Top">
                        <TabItem.Header>
                            <StackPanel Orientation="Vertical">
                                <materialDesign:PackIcon Foreground="{DynamicResource SecondaryAccentForegroundBrush}" Kind="TruckFastOutline" Width="28" Height="26" HorizontalAlignment="Center" />
                                <TextBlock Foreground="{DynamicResource SecondaryAccentForegroundBrush}" >물류</TextBlock>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid Margin="-2" Background="{DynamicResource PrimaryHueMidBrush}">
                            <TabControl  TabStripPlacement="Left">
                                <TabControl.Resources>
                                    <Style TargetType="TabItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TabItem">
                                                    <Grid Name="Panel">
                                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="Panel" Property="Background" Value="{DynamicResource SecondaryAccentBrush}" />
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="False">
                                                            <Setter TargetName="Panel" Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TabControl.Resources>
                                <TabItem  Height="100" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}">
                                    <TabItem.Header>
                                        <StackPanel Orientation="Vertical">
                                            <materialDesign:PackIcon Foreground="{DynamicResource SecondaryAccentForegroundBrush}" Kind="FileDocumentEditOutline" Width="28" Height="26" HorizontalAlignment="Center" />
                                            <TextBlock Foreground="{DynamicResource SecondaryAccentForegroundBrush}">제품등록</TextBlock>
                                        </StackPanel>
                                    </TabItem.Header>
                                    <Grid Background="{DynamicResource MaterialDesignPaper}" Margin="-3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Row="0" Column="0" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <Label  Height="25" Margin="8,0,4,0">제품명 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectName" Width="120" Height="Auto"></TextBox>
                                                <Label Height="25" Margin="4,0,4,0">출시일 :</Label>
                                                <DatePicker Foreground="{DynamicResource MaterialDesignBody}" x:Name="dp_lo_reg_inputDate" Width="100" Height="Auto"></DatePicker>
                                                <Label Margin="4,0,4,0">CPU :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectCPU" Width="170" Height="Auto"></TextBox>
                                                <Label Margin="4,0,4,0">크기 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectInch" Height="Auto" Grid.Column="4" Width="30"></TextBox>
                                                <Label Margin="4,0,4,0">배터리 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectmAh" Height="Auto" Grid.Column="4" Width="40"></TextBox>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                <Label Margin="8,0,4,0">RAM :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectRAM" Height="Auto" Grid.Column="4" Width="25"></TextBox>
                                                <Label Margin="4,0,4,0">제조사 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectBrand" Height="Auto" Grid.Column="4" Width="60"></TextBox>
                                                <Label Margin="4,0,4,0">카메라 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectCamera" Height="Auto" Grid.Column="4" Width="30"></TextBox>
                                                <Label Margin="4,0,4,0">무게 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectWeight" Height="Auto" Grid.Column="4" Width="30"></TextBox>
                                                <Label Margin="4,0,4,0">가격 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectPrice" Height="Auto" Grid.Column="4" Width="60"></TextBox>
                                                <Label Margin="4,0,1,0">디스플레이 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectDisplay" Height="Auto" Grid.Column="4" Width="80"></TextBox>
                                                <Label Margin="4,0,4,0">메모리 :</Label>
                                                <TextBox Foreground="{DynamicResource MaterialDesignBody}" x:Name="tb_lo_reg_objectMemory" Height="Auto" Grid.Column="4" Width="40"></TextBox>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Row="0" Column="1">
                                            <Button Name="btn_lo_reg_regist" Margin="10,2.8,10,31.2" Height="Auto" Click="btn_lo_reg_regist_Click">등록</Button>
                                            <Button Name="btn_lo_reg_search" Margin="10,33,10,0" Height="Auto" Click="btn_lo_reg_search_Click">조회</Button>
                                        </Grid>
                                        <Grid Row="2" Column="0" Grid.ColumnSpan="3">
                                            <ListView x:Name="lv_lo_reg_productList" Margin="10,10,10,10" Grid.ColumnSpan="5" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible">
                                                <ListView.Resources>
                                                    <Style TargetType="{x:Type ListViewItem}">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                        <Setter Property="Height" Value="30"/>
                                                    </Style>
                                                </ListView.Resources>
                                                <ListView.View >
                                                    <GridView>
                                                        <GridViewColumn Width="70" DisplayMemberBinding="{Binding Product_id}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="물품번호"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="150" DisplayMemberBinding="{Binding Name}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="물품명"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="80" DisplayMemberBinding="{Binding Manufacture, StringFormat='{}{0:yyyy-MM-dd}'}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="출시일"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="80" DisplayMemberBinding="{Binding Brand}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="제조사"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="60" DisplayMemberBinding="{Binding Inch}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="제품크기"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="90" DisplayMemberBinding="{Binding Display}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="디스플레이"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding MAh}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="배터리(mAh)"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Ram}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="RAM(GB)"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Memory}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="메모리(GB)"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="50" DisplayMemberBinding="{Binding Camera}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="카메라"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="200" DisplayMemberBinding="{Binding Cpu}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="CPU"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Weight}">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="무게(g)"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                        <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Price, StringFormat='{}{0:#,###}' }">
                                                            <GridViewColumn.Header>
                                                                <GridViewColumnHeader Click="gv_se_head_click" Content="가격"/>
                                                            </GridViewColumn.Header>
                                                        </GridViewColumn>
                                                    </GridView>
                                                </ListView.View>
                                            </ListView>
                                        </Grid>
                                    </Grid>
                                </TabItem>

                                <TabItem Height="100" Foreground="White" BorderBrush="{x:Null}">
                                    <TabItem.Header>
                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Foreground="{DynamicResource SecondaryAccentForegroundBrush}" Kind="Warehouse" Width="28" Height="26" HorizontalAlignment="Center" />
                                            <TextBlock Foreground="{DynamicResource SecondaryAccentForegroundBrush}" HorizontalAlignment="Center">입고</TextBlock>
